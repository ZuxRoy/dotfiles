# sxhkd reload config
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# toggle horizontal and vertical split
alt + {_,shift + }e
	bspc node '@parent' -R {_,-}90

# set the window state
alt + {t,s,f}
	bspc node -t {tiled,floating,~fullscreen}

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# standard terminal and dropdown terminal
alt + {_,shift +}Return
	{kitty, bspc rule -a \* -o state=floating layer=above rectangle=1400x800+260+140 && kitty}
    
# set floating terminal layout
super + {1-4} 
    $HOME/.config/bspwm/scripts/floating-layout.sh {1-4} 

# set floating terminal layout back to big
super + f
    $HOME/.config/bspwm/scripts/floating-layout-big.sh

# cycle next and previous nodes in a desktop
alt + {_,shift + }n
    bspc node -f {next,prev}.local.!hidden.window

# minimize current window
alt + m
    bspc node -g hidden

# bring back all minimized windows
super + m
    for node in $(bspc query -N -n .hidden); do bspc node $node -g hidden=off; done

alt + d
	rofi -show drun

alt + q
	bspc node -c

ctrl + {p,m,d}
    {charge.sh,memory-noti.sh,date-time-noti.sh}

ctrl + grave
    dunstctl history-pop
    
alt + grave
    dunstctl close

alt + shift + grave
    dunstctl close-all && dunstctl history-clear

alt + {F6,F7,F8}
    volume.sh {2,0,1}

alt + {F2,F3}
    brightness.sh {0,1}

alt + Print
    screenshot-x11.sh

alt + w
    wifi-rofi.sh

super + p
    bspc rule -a Wlogout layer=above && wlogout
